<Page x:Class="THC.pages.PageApplication"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:THC.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageApplication">

    <Grid>
        <StackPanel Width="300" VerticalAlignment="Center" HorizontalAlignment="Center">
            <GroupBox Header="Введите номер телефона">
                <TextBox Name="tbNumberPhone"/>
            </GroupBox>
            <GroupBox Header="Введите фамилию">
                <TextBox Name="tbSurname"/>
            </GroupBox>
            <Button Name="btnEnter" Content="Ввести" Click="btnEnter_Click"/>
            <Button Name="btnAddApplication" Content="Создать заявку" Visibility="Collapsed" Click="btnAddApplication_Click"/>
        </StackPanel>


    </Grid>
</Page>
